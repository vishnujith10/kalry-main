{
    "typography": {
      "fontFamilies": {
        "heading": "Lexend",
        "body": "Manrope"
      },
      "fontWeights": {
        "regular": 400,
        "medium": 500,
        "semiBold": 600,
        "bold": 700
      },
      "fontSizes": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px",
        "4xl": "36px",
        "5xl": "48px"
      },
      "lineHeights": {
        "tight": "1.2",
        "normal": "1.5",
        "relaxed": "1.625",
        "loose": "2"
      }
    },
    "colors": {
      "text": {
        "primary": "#000000",
        "secondary": "#4B5563",
        "muted": "#9CA3AF",
        "placeholder": "#D1D5DB"
      },
      "background": {
        "default": "#FFFFFF",
        "surface": "#F9FAFB",
        "card": "#FFFFFF"
      },
      "primary": {
        "default": "#3B82F6",     // Soft, vibrant blue
        "hover": "#2563EB",       // Darker on hover
        "light": "#DBEAFE"        //Light background blue
      },
      "success": {
        "default": "#10B981",
        "light": "#D1FAE5"
      },
      "error": {
        "default": "#EF4444",
        "light": "#FECACA"
      },
      "border": {
        "default": "#E5E7EB",
        "focus": "#3B82F6"
      }
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "40px"
    },
    "radius": {
      "sm": "6px",
      "md": "12px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.03)",
      "md": "0 4px 8px rgba(0, 0, 0, 0.05)",
      "lg": "0 12px 24px rgba(0, 0, 0, 0.08)"
    }
  }
  